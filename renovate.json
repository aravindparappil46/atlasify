{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMultipleMajorReleases",
    ":enableVulnerabilityAlerts",
    "schedule:weekly",
    "regexManagers:biomeVersions"
  ],
  "labels": ["dependency"],
  "prConcurrentLimit": 5,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": ["engines"],
      "rangeStrategy": "auto"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "setchy/atlassify",
      "description": "Update sonar.projectVersion variables in sonar-project.properties",
      "fileMatch": ["^sonar-project.properties$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? sonar.projectVersion=(?<currentValue>.+?)\\s"
      ]
    }
  ]
}
